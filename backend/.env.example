# Environment variables for Options Strategy Backtesting Platform

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/options_trading_db
ASYNC_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/options_trading_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True
ENVIRONMENT=development

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME="Options Strategy Backtesting Platform"

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# External APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
YAHOO_FINANCE_ENABLED=True

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# File Storage
UPLOAD_FOLDER=uploads/
MAX_CONTENT_LENGTH=16777216  # 16MB

# Performance Settings
CONNECTION_POOL_SIZE=20
MAX_OVERFLOW=30
POOL_TIMEOUT=30
